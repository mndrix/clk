#!/usr/bin/perl
use strict;
use warnings;
use App::Clk::Report;
use POSIX qw( strftime );

my $rpt = Report->new(@ARGV);
while ( my $entry = $rpt->next ) {
    my $time = to_localtime($entry->{time});
    printf "%6s %11s %s\n",
        substr( $entry->{id}, 0, 6 ),
        strftime("%m/%d %H:%M", localtime($time) ),
        $entry->{duration},
        $entry->{text};
}
